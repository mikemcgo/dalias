{
  "base": {
    "mounts": [
      {
        "target": "/tmp",
        "source": "$PWD",
        "type": "bind"
      },
      {
        "target": "/root",
        "source": "$HOME",
        "type": "bind"
      }
    ],
    "workdir": "/tmp",
    "rm": ""
  },
  "terraform": {
    "image": "hashicorp/terraform:0.12.29"
  },
  "busybox": {
    "image": "busybox"
  }
}